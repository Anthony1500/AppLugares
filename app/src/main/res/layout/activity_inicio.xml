<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/usuario_celular"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="404dp"
                android:background="@drawable/border_botton_top"
                android:ems="10"
                android:foregroundGravity="fill_horizontal|top"
                android:gravity="fill_vertical"
                android:hint="Celular"
                android:inputType="number"
                android:padding="15dp"
                android:translationX="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/usuario_nombre"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="188dp"
                android:background="@drawable/border_botton_top"
                android:ems="10"
                android:foregroundGravity="fill_horizontal|top"
                android:gravity="fill_vertical"
                android:hint="Nombre"
                android:inputType="text"
                android:padding="15dp"
                android:translationX="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="372dp"
                android:text="Celular."

                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"

                android:text="Placa."

                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.138"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/usuario_he"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:background="@drawable/border_botton_top"
                android:ems="10"
                android:foregroundGravity="fill_horizontal|top"
                android:gravity="fill_vertical"
                android:hint="Entrada"
                android:inputType="datetime"
                android:padding="15dp"
                android:translationX="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.788"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/usuario_placa"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:background="@drawable/border_botton_top"
                android:ems="10"
                android:foregroundGravity="fill_horizontal|top"
                android:gravity="fill_vertical"
                android:hint="Placa"
                android:inputType="text"
                android:padding="15dp"
                android:translationX="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Ho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:text="Hora de Entrada."

                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.178"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_tiket1"
                android:layout_width="308dp"
                android:layout_height="48dp"
                android:layout_marginTop="488dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Ingresar datos"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_regresar"
                android:layout_width="308dp"
                android:layout_height="48dp"
                android:layout_marginTop="556dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Regresar"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="78dp"
                android:layout_height="23dp"
                android:layout_marginTop="156dp"
                android:text="Nombre."

                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>